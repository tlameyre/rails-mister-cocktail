
<div class="img-container" style="background-image: url(<%= cl_image_path 'home-image' %>)">
  <div class="inner-container">
    <%= cl_image_tag 'banner-logo', class: "image-banner"%>
    <h1>Mister Cocktail</h1>
    <p>Le site référence de recettes de cocktails</p>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "bouton"%>
  </div>
</div>


<div class="conteneur">
  <h1>Toutes les recettes</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="property-card">
        <a href="/cocktails/<%= cocktail.id %>">
          <% if cocktail.photo.attached? %>
            <div class="property-image" style="background-image: url(<%= cl_image_path cocktail.photo.key %>)">
          <% else %>
            <div class="property-image" style="background-image: url(<%= cl_image_path 'sample' %>)">
          <% end %>
              <div class="property-image-title">
                <h5><%= cocktail.name %></h5>
              </div>
            </div>
        </a>
        <div class="property-description">
          <h5><%= cocktail.name %></h5>
          <% cocktail.doses.each do |dose| %>
          <%= dose.ingredient.name %> - <%= dose.description %>
          <br>
          <% end %>
          <div class="property-social-icons">
            <div class="delete">
              <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/cocktails/<%= cocktail.id %>">
                <i class="fas fa-trash-alt"></i>
              </a>
            </div>
            <div class="add">
              <a href="/cocktails/<%= cocktail.id %>/doses/new">
              <i class="fas fa-plus"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
